<!--Page header-->
<div class="page-header">
  <div class="page-leftheader">
    <h4 class="page-title">Tüm Blog Yazıları</h4>
  </div>
</div>
<!--End Page header-->

<!-- Row -->
<div class="row">
  <% blogs.forEach(blog => { %>
  <div class="col-xl-4 col-lg-6 col-md-12">
    <div class="card overflow-hidden">
      <div class="card-body pr-2 pl-4">
        <div class="d-flex align-items-center mt-auto">
          <div class="avatar brround avatar-md mr-3" style="background-image: url(../admin/images/users/16.jpg)"></div>
          <div>
            <a href="#" class="mt-4"><h5 class="font-weight-semibold"><%- blog.title  %> </h5></a>
            <!-- <small class="d-block text-muted">2 days ago</small> -->
          </div>
          <div class="ml-auto text-muted">
            <a class="option-dots new-list2" data-toggle="dropdown"
              ><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0V0z" fill="none" />
                <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" /></svg
            ></a>
            <div class="dropdown-menu tx-13 dropdown-menu-right">
              <a class="dropdown-item" href="/admin/delete-blog?id=<%- blog._id %>">Sil</a>
              <a class="dropdown-item" href="/admin/update-blog?id=<%- blog._id %>">Güncelle</a>
            </div>
          </div>
        </div>
      </div>
      <div class="item7-card-img px-4">
        <a href="#"></a>
        <img src="../admin/images/photos/1.jpg" alt="img" class="cover-image br-7" />
      </div>
      <div class="card-body">
        <div class="item7-card-desc d-flex mb-5">
          <a href="#" class="d-flex"
            ><svg class="svg-icon mr-2" xmlns="http://www.w3.org/2000/svg" height="18" viewBox="0 0 24 24" width="18">
              <path d="M0 0h24v24H0V0z" fill="none" />
              <path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 2v3H4V5h16zM4 21V10h16v11H4z" />
              <path d="M4 5.01h16V8H4z" opacity=".3" />
            </svg>
            <div class="mt-0"><%- ("0" + blog.updatedAt.getDate()).slice(-2) + "." + ("0" + (blog.updatedAt.getMonth() + 1)).slice(-2) + "." + blog.updatedAt.getFullYear();  %> </div></a
          >
          <small class="d-block text-muted mx-2"><%- blog.author  %> </small>
        </div>
        <p class=""><%- blog.content.substring(0,100)  %>... </p>
        <div class="btn-group align-top">
          <a href="#"><button class="btn btn-sm btn-white btn-svg" type="button">Oku</button></a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<!--End Row-->
