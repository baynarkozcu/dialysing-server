<div class="tm-main-content" id="top">
  <!--======= FOLLOW BAR =====-->
  <div id="section-i" class="tm-p tm-pt-20">
    <div class="container">
      <div class="container">
        <div class="container">
          <div class="tm-steps">
            <div class="tm-step active">
              Merkez Bilgileri
              <div class="tm-s-steps">
                <div class="tm-s-step"></div>
                <div class="tm-s-step"></div>
                <div class="tm-s-step"></div>
                <div class="tm-s-step active"></div>
                <div class="tm-s-step"></div>
              </div>
            </div>
            <div class="tm-step">Merkez Detayları</div>
            <div class="tm-step">Önizleme</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--======= INFORMATION =====-->
  <div id="section-ii" class="tm-margin-3">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
          <div class="tm-section-title">Adres Bilgileri</div>
          <form class="tm-form-wide" action="/panel/address-correction" method="POST">
            <div class="form-group">
              <label for="country-name">Ülke</label>
              <input type="text" class="form-control" name="country" id="country" value="<%- center.address.country || ""  %>" placeholder="Ülke" />
            </div>
            <div class="form-group">
              <label for="city-name">İl</label>
              <input type="text" class="form-control" name="city" id="city" value="<%- center.address.city || ""  %>" placeholder="İl" />
            </div>
            <div class="form-group">
              <label for="address">Adres</label>
              <input type="text" class="form-control" name="addressDetailText" id="address" value="<%- center.address.addressDetailText || ""  %>" placeholder="Adres" />
            </div>
            <div class="form-group">
              <label for="tax-center-number">Posta Kodu</label>
              <input type="number" class="form-control" name="zipCode" id="zipCode" value="<%- center.address.zipCode || ""  %>" placeholder="Posta Kodu" />
            </div>
          
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
          <div class="tm-section-title">İletişim Bilgileri</div>
          
            <div class="form-group">
              <label for="center-phone">Merkez Telefonu</label>
              <input type="tel" class="form-control" id="phone" name="phone" value="<%- center.contactInformation.phone || ""  %>" placeholder="Merkez Telefonu" />
            </div>
            <div class="form-group">
              <label for="whatsapp-address">Merkez Whatsapp No</label>
              <input type="tel" class="form-control" id="whatsapp" name="whatsapp" value="<%- center.contactInformation.whatsapp || ""  %>" placeholder="Merkez Whatsapp No" />
            </div>
            <div class="form-group">
              <label for="website">Websitesi</label>
              <input type="text" class="form-control" id="website" name="website" value="<%- center.contactInformation.website || ""  %>" placeholder="Websitesi" />
            </div>
            <div class="form-group">
              <label for="center-about">Merkeziniz Hakkında</label>
              <textarea class="form-control" id="bio" rows="3" name="bio" placeholder="Hakkında"><%- center.companyInformation.bio %></textarea>
            </div>
            <div class="tm-text-info">Merkezin sizin olduğunu doğrulayabilmemiz için bu bilgilerin doğru ve eksiksiz girildiğinden emin olun.</div>
            <div class="tm-button-next left">
              <a href="/panel/company-information">
                <button type="button" class="btn btn-outline-secondary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="#025c91" class="bi bi-chevron-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                  </svg></button
              ></a>
              <button type="submit" class="btn btn-secondary mx-2">Sonraki Adım</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
