<div class="tm-main-content" id="top">

      <!--======= FOLLOW BAR =====-->
    <div id="section-i" class="tm-p tm-pt-20 mt-5">
      <div class="container">
        <div class="tm-steps">
          <div class="tm-step active"> Kişisel Bilgiler
            <div class="tm-s-steps">
              <div class="tm-s-step active"></div>
              <div class="tm-s-step"></div>
              <div class="tm-s-step"></div>
              <div class="tm-s-step"></div>
              <div class="tm-s-step"></div>
