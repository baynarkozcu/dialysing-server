                <label class="form-check-label" for="nurse"> Hemşire </label>
              </div>
              <div class="form-group not-border checkbox">
                <input class="form-check-input" type="radio" value="Diyetisyen" name="academicEducation" id="dietis" />
                <label class="form-check-label" for="dietis"> Diyetisyen </label>
