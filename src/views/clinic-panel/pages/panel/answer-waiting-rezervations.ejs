                <a class="flex-sm-fill text-md-center nav-link mb-2" href="/panel/canceled-rezervations">İptal Olan Rezervasyonlar</a>
              </ul>
            </div>

            <% appointments.forEach(appointment => { %>
                         <div class="accordion accordion-flush" id="rezervationMessage1">
              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    <div class="tm-space-between tm-width-100">
                      <div>
                        <div class="admin-box-title"><%- appointment.patientNameSurname  %> </div>
                        <div class="tm-space-between tm-flex-align-baseline mobile">
                          <div class="admin-box-text"><%- appointment.treatmentMethod  %> </div>
                          <div class="admin-box-text">
                            <table class="mobile-table">
                              <tr>
                                <th><span><%- appointment.email  %> </span></th>
                                <th><span><%- appointment.phone  %> </span></th>
                              </tr>
                              <tr>
                                <td><span><%- appointment.adress.adressDetailText  %></span></td>
                                <td><span><%- appointment.insurance  %></span></td>
                              </tr>
                            </table>
                          </div>
                        </div>
                      </div>
                      <div class="right">
                        <div class="admin-box-text"><%- appointment.checkInDate.toJSON().slice(0,10)  %> </div>
                        <div class="admin-box-text"><%- appointment.situation  %> </div>
                      </div>
                    </div>
                  </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#rezervationMessage1">
                  <div class="accordion-body">
                    <div class="form-group">
                      <label for="center-about">Özel Notlar</label>
                      <textarea class="form-control" id="center-about" rows="3" placeholder="<%- appointment.note  %>" disabled></textarea>
                    </div>
                    <div class="tm-space-between">
                      <!-- <div class="warning left">Tatil Diyalizi Rezervasyonudur.</div> -->
                      <div class="buttons tm-space-between">
                        <a href="/panel/accept-appointment/<%- appointment._id %>" class="btn btn-second">Randevuyu Kabul Et</a>
                        <button type="button" class="btn btn-second" data-bs-toggle="modal" data-bs-target="#exampleModal">Değişiklik Talep Et</button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Hastanıza önerdiğiniz değişiklikleri belirtebilirsiniz.</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                              </div>
                              <div class="modal-body">
                                <p>Önerilerinizi Yazın</p>
                                <div class="form-floating">
                                  <textarea class="form-control" placeholder="Justo, elementum varius arcu, massa pellentesque nibh elementum accumsan eros, tincidunt lorem porttitor phasellus interdum" id="floatingTextarea2" style="height: 100px"></textarea>
                                </div>
                              </div>
                              <div class="d-grid gap-2 mb-5 p-3">
                                <button type="button" class="btn btn-second" data-bs-dismiss="modal">Değişiklikleri Talep Et</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <button class="btn btn-forth">İptal Et</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
            
